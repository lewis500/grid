div(layout='row')
	md-switch(flex='20' ng-model='vm.paused' ng-change='vm.click(vm.paused)') {{vm.paused? 'Paused' : 'Play'}}
svg.vis(version="1.1" baseProfile="basic" x="0" y="0" viewBox="0 0 120 120" ng-init='vm.setup()')
	g.g-main(transform='translate(10,10)')
		g.g-infrastructure
			g.g-lanes
				g.g-lane(ng-repeat='d in vm.lanes track by d.id' ng-attr-class='{{d.direction}}')
					path.lane(ng-attr-d='{{::vm.place_lane(d)}}')
					//- line.stripe(ng-attr-x='{{::S.lane_length}}')
			g.g-intersections
				//- g.g-intersection(ng-repeat='d in vm.intersections track by d.id' ng-attr-transform='{{vm.place_intersection(d)}}')
				//- 	rect.intersection(width='5' height='5' x='-2.5' y='-2.5')
		g.g-cars
			rect.car(ng-repeat='car in vm.cars track by car.id' ng-attr-transform='{{vm.place_car(car)}}' width='.8' height='.8' y='-.4' x='-.4' ng-attr-fill='{{car.color}}')

